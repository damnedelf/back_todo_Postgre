{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES6"],
    "sourceMap": true,

    "outDir": "build",
    "rootDir": "src",

    "strict": true,

    "moduleResolution": "node",
    "baseUrl": ".",

    "types": ["node"],

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
